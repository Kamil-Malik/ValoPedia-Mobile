<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/iv_agent_skill_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/image_of_agent"
            app:layout_constraintStart_toStartOf="@id/tv_agent_skill_title"
            app:layout_constraintTop_toBottomOf="@id/tv_agent_skill_title"
            tools:src="@drawable/ic_broken_image" />

        <TextView
            android:id="@+id/tv_agent_skill_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/sen_bold"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Initiator" />

        <TextView
            android:id="@+id/tv_agent_skill_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/sen"
            android:justificationMode="inter_word"
            app:layout_constraintEnd_toEndOf="@id/tv_agent_skill_title"
            app:layout_constraintStart_toEndOf="@id/iv_agent_skill_icon"
            app:layout_constraintTop_toTopOf="@id/iv_agent_skill_icon"
            tools:text="@string/dummy_role_description" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>